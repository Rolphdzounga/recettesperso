<% if @recette.commentaires != 0 %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>Prior commentaires: </h3>
        <div id="messages">
          <%= render partial: 'commentaires/commentaire', object: @commentaires %>
        </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>No commentaires Yet!</h3>
    </div>
  </div>
<% end %>