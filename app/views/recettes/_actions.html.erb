	<div class="row justify-content-start mt-2 mb-2">
	 <% if logged_in? && (current_chef == @recette.chef || current_chef.admin?) %>
		<%= link_to edit_recette_path(@recette),class: "btn btn-success btn-sm" do %>
		  <strong >Modifier</strong> 
		<% end %>

		<%= link_to recette_path(@recette),method:"delete",data:{confirm:"Etes vous sur de vouloir supprimer cette recette?"},class: "btn btn-danger btn-sm ml-3" do %>
		  <strong >Supprimer</strong> 
		<% end %>
	<% end %> 
	</div>