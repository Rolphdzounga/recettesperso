<div class="container row">
	<div class="col-xs-4 mx-auto d-block">
<% if obj.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
<button type="button" class="close float-left" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> <p class="badge badge-danger">
<%= pluralize obj.errors.count, "erreur" %>
	empeche la creation de <%= obj.class %></p>
	<ul class="list-group pr-0">	

		<% obj.errors.messages.each do |n,msg| %>
			<% msg.each do |e| #msg est un tableau %>
				<li class="list-group-item">
					<%= e %>

				</li>
			<%end%>	
		<%end%>	
	</ul>
	</div>
</div>
<%end%>
</div>